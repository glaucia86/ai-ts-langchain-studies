{
  "name": "typescript",
  "version": "1.0.0",
  "description": "A repository with code samples using TypeScript + Azure OpenAI",
  "main": "main.js",
  "scripts": {
    "build": "rimraf build && tsc",
    "preserve": "npm run build",
    "start": "npm run build && cross-env NODE_ENV=development concurrently \"nodemon\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "typescript",
    "azure",
    "openai"
  ],
  "author": "Glaucia Lemos <Twitter: @glaucia_lemos86>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.8.6",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@azure/openai": "^1.0.0-beta.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "rimraf": "^5.0.5"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "npx ts-node ./src/main.ts"
  }
}
