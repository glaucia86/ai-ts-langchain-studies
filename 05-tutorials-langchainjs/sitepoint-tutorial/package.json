{
  "name": "sitepoint-tutorial",
  "version": "1.0.0",
  "description": "a sample tutorial to learn how to use Azure OpenAI with LangChain.js",
  "main": "main.js",
  "scripts": {
    "build": "rimraf build && tsc",
    "preserve": "npm run build",
    "start": "npm run build && nodemon"
  },
  "keywords": [
    "langchain",
    "azure-openai",
    "typescript",
    "javascript"
  ],
  "author": "Glaucia Lemos <Twitter: @glaucia_lemos86>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.8",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@langchain/azure-openai": "^0.0.2",
    "@langchain/community": "^0.0.33",
    "@langchain/core": "^0.1.39",
    "dotenv": "^16.4.5",
    "langchain": "^0.1.23",
    "rimraf": "^5.0.5"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "npx ts-node ./src/main.ts"
  }
}
